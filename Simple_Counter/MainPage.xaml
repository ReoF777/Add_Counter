<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Simple_Counter.ViewModel"
             x:Class="Simple_Counter.MainPage"
             x:DataType="viewmodel:MainViewModel"
             Title="AddCounter">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            

            <Label Text="{Binding Text}" HorizontalOptions="Center" FontSize="Large"/>

            <Button Text="+" Command="{Binding AddCommand}" FontSize="Large"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
